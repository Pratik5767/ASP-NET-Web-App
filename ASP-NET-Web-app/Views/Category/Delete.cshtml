@model ASP_NET_Web_app.Models.Category

@{
    ViewBag.Title = "Delete Category";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Delete Category</h3>
        </div>
        <div class="card-body">
            <p class="fs-5">⚠️ Are you sure you want to delete this category?</p>

            <dl class="row">
                <dt class="col-sm-3 fw-bold">Category Name:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoryName)</dd>
            </dl>

            @using (Html.BeginForm("Delete", "Category", new { id = Model.CategoryId }))
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger px-4">Delete</button>
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-outline-secondary ms-2" })
            }
        </div>
    </div>
</div>
