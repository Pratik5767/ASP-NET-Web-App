@model IEnumerable<ASP_NET_Web_app.Models.Category>
@{
    ViewBag.Title = "Categories";
}
<h2>Categories</h2>
<p>@Html.ActionLink("Create New", "Create")</p>
<table class="table">
    <tr><th>CategoryId</th><th>CategoryName</th><th></th></tr>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.CategoryId</td>
            <td>@c.CategoryName</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = c.CategoryId }) |
                @Html.ActionLink("Delete", "Delete", new { id = c.CategoryId })
            </td>
        </tr>
    }
</table>
