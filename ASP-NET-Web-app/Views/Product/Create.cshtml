@model ASP_NET_Web_app.Models.Product
@{
    ViewBag.Title = "Create Product";
}

<div class="d-flex justify-content-center mt-5">
    <div class="card shadow-lg p-4" style="width: 45%;">
        <h3 class="text-center mb-4 text-success">
            <i class="bi bi-box-seam"></i> Create Product
        </h3>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                @Html.LabelFor(m => m.ProductName, htmlAttributes: new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", placeholder = "Enter product name..." })
                @Html.ValidationMessageFor(m => m.ProductName, "", new { @class = "text-danger" })
            </div>

            <div class="mb-4">
                @Html.LabelFor(m => m.CategoryId, "Category", htmlAttributes: new { @class = "form-label fw-bold" })
                @Html.DropDownList("CategoryId", (SelectList)ViewBag.CategoryId, "-- Select --", new { @class = "form-select" })
                @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger" })
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success px-4">
                    <i class="bi bi-save"></i> Save
                </button>
                @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-outline-secondary px-4" })
            </div>
        }
    </div>
</div>